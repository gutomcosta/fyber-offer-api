<% if @offers %>
  <div id="list">
    <%if @offers.empty? %>
      <h3>No offers available</h3>
    <% else %>
      <h1>List Offers</h1>
       
      <table>
        <tr>
          <th>Title</th>
          <th>Thumbnail</th>
          <th>Payout</th>
        </tr>
       
      <% @offers.each do |offer| %>
        <tr>
          <td><%= offer.title %></td>
          <td><%= image_tag(offer.thumbnail) %></td>
          <td><%= offer.payout %></td>
        </tr>
      <% end %>
      </table>
       
      <br>
    <% end %>
  </div>
<% end %>